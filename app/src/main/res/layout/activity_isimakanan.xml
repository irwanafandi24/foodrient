<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="4dp"
    tools:context="com.example.miafandi.foody.Bahan.DetailResepActivity">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageMakanananItem"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:civ_border_color="@color/light_grey"
                    app:civ_border_width="3dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/grid4"
                    android:layout_marginRight="10dp"/>
                <RelativeLayout
                    android:layout_width="175dp"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/namaMakananItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Kikil Pedas Manis"
                        android:textColor="@color/black"
                        android:fontFamily="@font/calibri"
                        />

                    <TextView
                        android:id="@+id/penyakit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/greyFont"
                        android:text="#Jantung #Kekurangan Vitamin C #Diare #Rendah Colesterol"
                        android:layout_below="@id/namaMakananItem"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true">
                        <RatingBar
                            android:id="@+id/ratng_makanan"
                            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hargaMakanan"
                            android:numStars="5"
                            android:rating="2"
                            android:paddingTop="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp "
                            android:textSize="14sp"
                            android:textColor="@color/greyFont"
                            android:layout_marginLeft="25dp"
                            />
                        <TextView
                            android:id="@+id/hargaMakanan"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="15.000"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/robotoregular"
                            android:textColor="@color/colorPrimary"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:alpha="0.3"
                        android:src="@drawable/next"/>
                </LinearLayout>
            </LinearLayout>

            </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
