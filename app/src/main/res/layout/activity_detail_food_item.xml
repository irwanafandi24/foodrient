<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context="com.example.miafandi.foody.Home.detailFoodItem">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageDetailFood"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/iklan" />

        <LinearLayout
            android:id="@+id/harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/imageDetailFood"
            android:background="@color/white"
            android:padding="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/detailFoodNama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rawon Sapi Segar"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/detailFoodJarak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informasi Komposisi Bahan : \n \t Mengandung Vitamin A, D, Asam Folat, Kalsium dan Mineral"
                        android:textSize="10dp"
                        android:textColor="@color/colorFont"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginRight="4dp"/>
                <TextView
                    android:id="@+id/pesanHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginRight="4dp"/>
            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.CardView
        android:id="@+id/cardtop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        card_view:cardElevation="2dp"
        android:layout_below="@+id/harga">

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/foodName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textSize="12sp"
                    android:text="Makanan yang dipesan"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/decrement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"
                        android:background="@drawable/white_grey_border_bottom"
                        android:paddingBottom="10px"
                        android:paddingLeft="13px"
                        android:paddingRight="13px"
                        android:paddingTop="10px"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="1"
                        android:padding="10px"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-2dp"/>
                    <TextView
                        android:id="@+id/increment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="+"
                        android:padding="10px"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginTop="-2dp"
                        android:background="@drawable/white_grey_border_bottom"/>

                </LinearLayout>


            </LinearLayout>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Tambahkan Catatan"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="14dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
        android:id="@+id/cardtwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        card_view:cardElevation="2dp"
        android:layout_below="@+id/cardtop">

        <LinearLayout
            android:id="@+id/car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Proses pengiriman makanan"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroupPesan"
                android:layout_gravity="left"
                android:layout_marginLeft="-15dp">

                <RadioButton
                    android:id="@+id/kirimPesan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout"
                    android:text="Dikirimkan"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:scaleX="0.7"
                    android:scaleY="0.7"/>
                <RadioButton
                    android:id="@+id/ambilPesan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ambil Sendiri"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="-4dp"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    />

                <RadioButton
                    android:id="@+id/gojek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GoJek"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="5dp"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    />

            </RadioGroup>
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardthree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            card_view:cardElevation="2dp"
            android:layout_below="@+id/cardtwo">

            <LinearLayout
                android:id="@+id/lokasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Lokasi Pengiriman"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/peta" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Dimana lokasi anda sekarang"
                        android:textColorHint="@color/colorFont"
                        android:layout_marginLeft="5dp"
                        android:textSize="12dp"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="3dp"/>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/lastCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            card_view:cardElevation="2dp"
            android:layout_below="@+id/cardthree">

            <LinearLayout
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Total Transaksi"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total harga makanan"
                                android:textSize="11dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Biaya pengiriman"
                                android:textSize="11dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL"
                            android:textSize="12dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/pesanTotalHarga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12000"
                            android:textSize="11dp"/>
                        <TextView
                            android:id="@+id/pesanKirim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3000"
                            android:textSize="11dp"/>
                        <TextView
                            android:id="@+id/pesanTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15000"
                            android:textSize="12dp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/lastCard">
        <Button
            android:id="@+id/btnPesan"
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:text="PESAN"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/btn_daftar"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:layout_marginBottom="15dp"
            />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
